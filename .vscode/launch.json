	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'cargo-featurex'",
			"cargo": {
				"args": ["test", "--no-run", "--lib", "--package=cargo-featurex"],
				"filter": {
					"name": "cargo-featurex",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'cargo-featurex'",
			"cargo": {
				"args": ["build", "--bin=cargo-featurex", "--package=cargo-featurex"],
				"filter": {
					"name": "cargo-featurex",
					"kind": "bin"
				}
			},
			"args": ["featurex"],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'cargo-featurex'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=cargo-featurex",
					"--package=cargo-featurex"
				],
				"filter": {
					"name": "cargo-featurex",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}
